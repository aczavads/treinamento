<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

	<changeSet author="fernando.santos"
		id="create-table-conta-contabil-fs2">
		<createTable tableName="conta_contabil_fs2">
			<column name="id" type="${TIPO_ID}">
				<constraints primaryKey="true"
					primaryKeyName="pk_conta_contabil_fs2" />
			</column>
			<column name="conta_superior_id" type="${TIPO_ID}">
				<constraints referencedTableName="conta_contabil_fs2"
					referencedColumnNames="id"
					foreignKeyName="fk_conta_contabil_superior_fs2" />
			</column>
			<column name="codigo" type="${TIPO_CODIGO_CONTABIL}">
				<constraints nullable="false" unique="true"
					uniqueConstraintName="unique_conta_contabil_codigo_fs2" />
			</column>
			<column name="nome" type="${TIPO_DESCRICAO_255}">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	
	<changeSet author="fernando.santos"
		id="create-table-plano-de-contas-fs2">
		<createTable tableName="plano_de_contas_fs2">
			<column name="id" type="${TIPO_ID}">
				<constraints primaryKey="true"
					primaryKeyName="pk_plano_de_contas_fs2" />
			</column>
			<column name="descricao" type="${TIPO_DESCRICAO_255}">
				<constraints nullable="false" />
			</column>
			<column name="inicio_vigencia" type="${TIPO_DATE}">
				<constraints nullable="false" />
			</column>
			<column name="fim_vigencia" type="${TIPO_DATE}">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	
	<changeSet author="fernando.santos"
		id="create-table-conta-plano-de-contas-fs2">
		<createTable tableName="conta_plano_de_contas_fs2">
			<column name="plano_de_contas_id" type="${TIPO_ID}">
				<constraints referencedTableName="plano_de_contas_fs2"
					nullable="false"
					referencedColumnNames="id"
					foreignKeyName="fk_conta_plano_de_contas_plano_fs2" />
			</column>
			<column name="conta_contabil_id" type="${TIPO_ID}">
				<constraints referencedTableName="conta_contabil_fs2"
					nullable="false"
					referencedColumnNames="id"
					foreignKeyName="fk_conta_plano_de_contas_conta_contabil_fs2" />
			</column>
		</createTable>
		<addPrimaryKey
			columnNames="plano_de_contas_id, conta_contabil_id"
			tableName="conta_plano_de_contas_fs2" constraintName="pk_conta_plano_de_contas_fs2"></addPrimaryKey>
	</changeSet>
	
</databaseChangeLog> 

