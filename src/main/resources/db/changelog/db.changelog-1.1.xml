<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
	<changeSet author="valdenir"
		id="create-table-conta-contabils">
		<createTable tableName="conta_contabils">
			<column name="id" type="${TIPO_ID}">
				<constraints primaryKey="true"
					primaryKeyName="pk_conta_contabils" />
			</column>
			<column name="conta_superior_id" type="${TIPO_ID}">
				<constraints referencedTableName="conta_contabil"
					referencedColumnNames="id"
					foreignKeyName="fk_conta_contabils_superior" />
			</column>
			<column name="codigo" type="${TIPO_CODIGO_CONTABIL}">
				<constraints nullable="false" unique="true"
					uniqueConstraintName="unique_conta_contabils_codigo" />
			</column>
			<column name="nome" type="${TIPO_DESCRICAO_255}">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet id="1" author="valdenir">
		<createTable tableName="plano_de_contass">
			<column name="id" type="${TIPO_ID}">
				<constraints primaryKey="true"
					primaryKeyName="pk_plano_de_contass" />
			</column>
			<column name="descricao" type="${TIPO_DESCRICAO_255}">
				<constraints nullable="false" />
			</column>
			<column name="inicio_vigencia" type="date">
				<constraints nullable="false" />
			</column>
			<column name="fim_vigencia" type="date">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
	<changeSet id="2" author="valdenir">
		<createTable tableName="conta_plano_de_contass">
			<column name="plano_de_contass_id" type="${TIPO_ID}">
				<constraints referencedTableName="plano_de_contass"
					nullable="false" referencedColumnNames="id"
					foreignKeyName="fk_plano_de_contass" />
			</column>
			<column name="conta_contabils_id" type="${TIPO_ID}">
				<constraints referencedTableName="conta_contabils"
					nullable="false" referencedColumnNames="id"
					foreignKeyName="fk_conta_contabils" />
			</column>
		</createTable>
	</changeSet>
	<changeSet id="3" author="valdenir">
		<addPrimaryKey
			columnNames="plano_de_contass_id, conta_contabils_id"
			tableName="conta_plano_de_contass"
			constraintName="pk_conta_plano_de_contass" />
	</changeSet>
</databaseChangeLog> 

